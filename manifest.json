{
  "manifest_version": 3,
  "name": "BashDatDash",
  "version": "1.0",
  "description": "Replace en- and em-dashes in ChatGPT responses.",
  "permissions": ["storage", "scripting", "activeTab"],
  "action": {
    "default_popup": "popup.html"
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "content_scripts": [{
    "matches": ["https://chatgpt.com/*"],
    "js": ["content.js"],
    "run_at": "document_idle"
  }]
}
